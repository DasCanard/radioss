{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "radioss",
  "version": "0.5.1",
  "identifier": "me.richy.radioss",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "radioss",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi", "dmg", "appimage", "deb", "rpm"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/radioss.png",
      "icons/radioss.ico"
    ],
    "category": "AudioVideo",
    "shortDescription": "A modern internet radio player",
    "longDescription": "A modern, cross-platform internet radio player built with Tauri, React, and TypeScript. Features include streaming internet radio stations, favorites management, custom stations, Discord Rich Presence integration, and a modern dark theme UI.",
    "license": "MIT",
    "homepage": "https://github.com/DasCanard/radioss",
    "resources": [],
    "copyright": "Copyright (c) 2025 richy",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3"]
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "openssl"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/DasCanard/radioss/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJCMUIwNTJDNTBCMTg5MkIKUldRcmliRlFMQVVidS9jbXpKZDdOYXNlM1laS2hiTnAwM0dSbVNtVTM5TzZ3QTdQbVRrdDY4SU4K",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
